{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["./playwright.config.ts", "./tests/**/*.ts"], 
  "exclude": ["node_modules"]
}
